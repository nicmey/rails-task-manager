<h1>List of all tasks</h1>
<ul style="list-style:none;">
  <% @tasks.each do |task| %>
  <li>
    <input type="checkbox" onclick="return false;" <%= "checked" if task[:completed]==true  %>/>
    <%= link_to task[:title], task_path(task[:id])%>
    <%= link_to "Delete", task_path(task[:id]), method: :delete, data: { confirm: 'Are you sure?' }%>
  </li>
  <% end %>
</ul>

<%= link_to "Add a new task", tasks_new_path %>
